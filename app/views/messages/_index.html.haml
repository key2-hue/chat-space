
.all

  .left
    .currentName
      %h3.currentName__user 
        =current_user.name
      =link_to new_group_path do
        %i.currentName__user.currentName__user--edit.fa.fa-edit
      =link_to edit_user_path(current_user) do
        %i.currentName__user.currentName__user--cog.fa.fa-cog
        

    .group
      - current_user.groups.each do |group|
        = link_to "#", class: :"group__link" do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
  .right
    .chat
      %h2.chat__name test-group
      %h3.chat__users Members seo neko
      =link_to edit_group_path(current_user) do
        .chat__edit Edit
    .bottom
      .user
        %ul.user__name 
          %li.user__name.user__name_user seo 
          %li.user__name.user__name_date 2018/09/21 06:18:55
        %h3.user__comment Hello world!

        %ul.user__name
          %li.user__name.user__name_user neko 
          %li.user__name.user__name_date 2016/09/22 06:16:55
        %h3.user__comment Good bye world!

      .submit
        %form 
          %input.submit__type{placeholder: 'type a message'}
          =link_to "#" do
            %i.submit__type.submit__type--image.fa.fa-image
          =link_to "#" do
            %button.submit__button Send
